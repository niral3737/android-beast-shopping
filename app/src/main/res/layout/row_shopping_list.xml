<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_list"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_list"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="25dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food for home"
                android:textColor="#4a4a4a"
                android:textSize="18sp"
                android:id="@+id/tv_list_name"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_list_name"
                android:background="#EEEEEE"
                android:id="@+id/divider"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:id="@+id/tv_list_created_date"
                android:text="Wednesday, 20 Dec"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_created_by"
                android:layout_toRightOf="@id/tv_list_created_date"
                android:text="You created it."
                android:textAlignment="textEnd"
                android:gravity="end"
                android:layout_below="@id/divider"
                android:layout_marginTop="3dp"
                android:textSize="12sp"/>

