<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shopping_list_detail2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itgosolutions.beastshopping.activities.ShoppingListDetailActivity">

    <include
        android:id="@+id/toolbar_shopping_list_detail"
        layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_shopping_list_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar_shopping_list_detail"
    android:background="#eee">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:elevation="8dp"
        android:src="@mipmap/ic_plus"
        app:fabSize="normal"
        app:rippleColor="@color/colorPrimary" />

</RelativeLayout>
